<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dbatletismo?zeroDateTimeBehavior=convertToNull</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"/>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="hibernate.connection.autocommit">true</property>
        <mapping resource="resources/hbm/Aspirante.hbm.xml"/>
        <mapping resource="resources/hbm/Categoria.hbm.xml"/>
        <mapping resource="resources/hbm/Disciplina.hbm.xml"/>
        <mapping resource="resources/hbm/Escuela.hbm.xml"/>
        <mapping resource="resources/hbm/Competencia.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
